{
  "manifest_version": 3,
  "name": "captions-yank",
  "version": "0.1",

  "description": "Yanks captions",

  "icons": {
    "48": "icon.png"
  },
 "permissions": ["activeTab", "scripting", "clipboardWrite"],

 "action": {
    "default_icon": "icon.png",
    "default_title": "captions-yank",
    "default_popup": "index.html"
  },

 "content_scripts": [
         {
             "matches": ["<all_urls>"],
             "js": ["script.js"]
         }
     ]

}

